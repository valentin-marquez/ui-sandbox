---
import "@/styles/globals.css";
import Theme from "@/components/theme.astro";
import { Header } from "@/components/layout/Header";

interface Props {
	title?: string;
}

const { title = "UI Sandbox" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<Theme />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<!-- Grain effect overlay -->
		<div class="grain"></div>

		<div class="min-h-screen flex flex-col relative z-10">
			<!-- React Header component with motion animations -->
			<Header client:load />

			<!-- Add padding-top to account for fixed header -->
			<main class="flex-grow pt-[72px]">
				<slot />
			</main>

			<footer class="py-6 border-t border-border mt-auto bg-background">
				<div
					class="container mx-auto px-4 text-center text-sm text-muted-foreground">
					<p>UI Sandbox - A playground for UI components and patterns</p>
				</div>
			</footer>
		</div>
	</body>
</html>
