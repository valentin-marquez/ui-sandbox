---
export const prerender = false;
import Layout from "@/layouts/Layout.astro";
import ComponentList from "@/components/ComponentList.astro";

const title = "Component Playground - UI Sandobox";
---

<Layout title={title}>
	<div class="container mx-auto py-10 px-4">
		<header class="mb-8 text-center">
			<h1 class="text-3xl font-bold">Component Playground</h1>
			<p class="text-muted-foreground mt-2">
				Select a component to explore and interact with
			</p>
		</header>

		<ComponentList showPlaygroundLinks={true} />
	</div>
</Layout>
