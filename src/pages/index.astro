---
import ComponentList from "@/components/ComponentList.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="UI Sandbox">
	<div class="container mx-auto py-10">
		<header class="mb-10 text-center">
			<h1 class="text-4xl font-bold mb-3" transition:animate="fade">
				UI Sandbox
			</h1>
			<p class="text-muted-foreground" transition:animate="fade">
				A playground for experimenting with UI components and patterns
			</p>
		</header>

		<ComponentList transition:animate="slide" />
	</div>
</Layout>
