{
    "name": "UI Sandbox",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:0-18",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "biomejs.biome"
            ]
        }
    },
    "onCreateCommand": "bash .devcontainer/install-bun.sh",
    "postCreateCommand": "bun install",
    "remoteUser": "node",
    "waitFor": "postCreateCommand"
}